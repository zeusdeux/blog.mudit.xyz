{
  "name": "blog.mudit.xyz",
  "version": "1.0.0",
  "description": "Mudit's blog",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "next",
    "build": "next build",
    "export": "next export",
    "gql-server": "ts-node --skip-project graphql/devServer.ts",
    "generate-typescript-types": "graphql-codegen --config codegen.yml",
    "generate-typescript-types:watch": "npm run  generate-typescript-types -- --watch"
  },
  "keywords": [
    "blog",
    "mudit.xyz",
    "personal blog"
  ],
  "author": "Mudit Ameta <zeusdeux@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@zeusdeux/serverless-graphql": "0.0.9",
    "contentful": "^7.11.3",
    "graphql": "^14.5.8",
    "next": "^9.1.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.9.1",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "apollo-server": "^2.9.15",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4",
    "@graphql-codegen/typescript": "1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,html,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
