{
  "name": "blog.mudit.xyz",
  "version": "1.0.0",
  "description": "Mudit's blog",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc -p .",
    "typecheck:watch": "tsc -p . --watch",
    "lint": "tslint -p .",
    "check": "run-p typecheck lint",
    "dev": "next",
    "build": "npm run check && next build",
    "export": "npm run check && next export",
    "gql-server": "ts-node --skip-project graphql/devServer.ts",
    "generate-types-from-gql-schema": "graphql-codegen --config codegen.yml",
    "generate-types-from-gql-schema:watch": "npm run generate-types-from-gql-schema -- --watch",
    "generate-types-from-ctfl": "contentful-typescript-codegen -c blogPost -o contentful/types.ts",
    "dev-all": "run-p typecheck:watch dev gql-server generate-types-from-gql-schema:watch generate-types-from-ctfl"
  },
  "keywords": [
    "blog",
    "mudit.xyz",
    "personal blog"
  ],
  "author": "Mudit Ameta <zeusdeux@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@zeusdeux/serverless-graphql": "0.0.14",
    "contentful": "^7.11.3",
    "graphql": "^14.5.8",
    "next": "^9.1.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.9.1",
    "@graphql-codegen/typescript": "1.0.0",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "apollo-server": "^2.9.15",
    "contentful-management": "^5.12.0",
    "contentful-typescript-codegen": "git+ssh://git@github.com:zeusdeux/contentful-typescript-codegen.git#bcb55953c4c0d77e2e8c9dfe3a3054d6e2e88fe7",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,html,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
